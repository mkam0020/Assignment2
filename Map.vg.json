{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Meterorite larger than 0.5 kg",
  "projection": {"type": "equalEarth"},
  "background":"aliceblue",
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mkam0020/Assignment2/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mkam0020/Assignment2/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "black"}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mkam0020/Assignment2/main/Meteorite_Landings.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "reclong", "type": "quantitative"},
        "latitude": {"field": "reclat", "type": "quantitative"},
        "size": {
          "field": "mass (g)",
          "type": "quantitative",
          "title": "Mass",
          "scale": {"domain": [5000,10000000]}
        }
      }
    }
  ]
}