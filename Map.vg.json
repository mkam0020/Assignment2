{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Meterorite larger than 0.5 kg",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mkam0020/Assignment2/main/ne_110m%20(2).json",
        "format": {"type": "topojson", "feature": "ne_110m_wgs84_bounding_box"}
      },
      "mark": {"type": "geoshape", "fill":"lightblue", "tooltip":null}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mkam0020/Assignment2/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_admin_0_countries"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white", "tooltip":null}
    },
    {
      "data": {
        "url": "https://raw.githubusercontent.com/mkam0020/Assignment2/main/ne_110m.json",
        "format": {"type": "topojson", "feature": "ne_110m_graticules_30"}
      },
      "mark": {"type": "geoshape", "fill": null, "stroke": "black", "tooltip":null}
    },

    {
      "data": {
        "url": "https://raw.githubusercontent.com/mkam0020/Assignment2/main/Meteorite_Landings.csv"
      },
      "transform": [
        {"calculate":"datum.massg/1000", "as": "mass"}
      ],
      "mark": "circle",
      "encoding": {
        "tooltip":[
          {"field": "mass", "type": "quantitative"}
        ],
        "longitude": {"field": "reclong", "type": "quantitative"},
        "latitude": {"field": "reclat", "type": "quantitative"},
        "size": {
          "field": "mass",
          "type": "quantitative",
          "title": "Mass (g)",
          "scale": {"domain": [5000,10000000]}
          
        }
      }
    }
  ]
}